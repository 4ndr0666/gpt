{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "BraveGPT Conversation Starters",
  "type": "object",
  "required": ["conversation_starters"],
  "properties": {
    "conversation_starters": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["prompt"],
        "properties": {
          "title": { "type": "string" },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "prompt": { "type": "string", "minLength": 8 }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}